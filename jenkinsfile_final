pipeline {
    agent any


       tools {
        maven 'maven3'
    }

    stages {
      stage('checkout') {
            steps {
                echo 'Cloning GIT HUB Repo '
				git branch: 'master', url: 'https://github.com/vindhyasri393/mindcircuit13.git'
            }  
        }
		
		
		
	stage('sonar') {
    steps {
        echo 'Scanning project'
        sh 'ls -ltr'

        sh '''
            mvn clean verify sonar:sonar -U \
            -Dsonar.host.url=http://52.66.200.202:9000 \
            -Dsonar.login=sqa_b3c20caaefc4d049ed0735e4b68082be2673fa30
        '''
    }
}

		
		
		
        stage('Build Artifact') {
            steps {
                echo 'Build Artifact'
				sh 'mvn clean package'
            }
        }
		
		
		
        stage('Docker Image') {
            steps {
                echo 'Docker Image building'
				sh 'docker build -t vindhyasrivallakatla/batch13:${BUILD_NUMBER} .'
            }
        }
		
		
       stage('Push to Dockerhub') {
            steps {
			 script {
			withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) 
			{
            sh 'docker login -u vindhyasrivallakatla -p ${dockerhub}'
			
			 }
			   sh 'docker push vindhyasrivallakatla/batch13:${BUILD_NUMBER}'
			   
           
				}
				
            }
        }
		
		
    stage('Update Deployment File') {
		
		 environment {
            GIT_REPO_NAME = "mindcircuit13"
            GIT_USER_NAME = "vindhyasri393"
        }
		
            steps {
                echo 'Update Deployment File'
				withCredentials([string(credentialsId: 'githubtoken', variable: 'githubtoken')]) 
				{
                  sh '''
                    git config user.email "vindhyasrivallakatla@gmail.com"
                    git config user.name "vindhyasri393"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/batch13:.*/batch13:${BUILD_NUMBER}/g" deploymentfiles/deployment.yml
                    git add .
                    
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"

                    git push https://${githubtoken}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:master
                '''
				  
                 }
				
            }
        }
		
		
			
    }

}
